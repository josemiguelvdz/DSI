<Page
    x:Class="P3JoseMiguelVillacanas.Hub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:P3JoseMiguelVillacanas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Azure"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Azure"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!--<Grid.Background>
            -->
        <!--<ImageBrush ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />-->
        <!--
        </Grid.Background>-->
        <Button x:ConnectionId='2' x:Name="ReturnToMenu" Content="Volver al menú" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30px" Margin="30" Width="280" Height="70">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
            </Button.Background>
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
        </Button>
        <Button x:ConnectionId='3' x:Name="RobotTeam" Content="Robots" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="30px" Margin="30" Width="230" Height="70">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
            </Button.Background>
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
        </Button>
        <Button x:ConnectionId='4' x:Name="Settings" Content="Configuración" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="30px" Margin="30" Width="270" Height="70">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
            </Button.Background>
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                            <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
        </Button>

        <Button x:ConnectionId='5' x:Name="Level1" Content="Nivel 1" Margin="293,256,0,0" VerticalAlignment="Top" Height="98" Width="146" FontSize="30px"/>
        <Button x:ConnectionId='6' x:Name="Level2" Content="Nivel 2" Margin="0,433,0,0" VerticalAlignment="Top" Height="98" Width="146" HorizontalAlignment="Center" FontSize="30px"/>

        <Button x:ConnectionId='7' x:Name="Level3" Content="Nivel 3" Margin="853,256,0,0" VerticalAlignment="Top" Height="98" Width="146" FontSize="30px"/>
    </Grid>
</Page>

