<Page
    x:Class="P3JoseMiguelVillacanas.Hub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:P3JoseMiguelVillacanas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Azure"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Azure"/>
        </Style>
    </Page.Resources>

    <Viewbox>
        <Grid Width="1280" Height="720">
            <Grid.Background>

                <ImageBrush ImageSource="Assets/background.png" Stretch="Fill" AlignmentY="Top" AlignmentX="Center" />

            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="275"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:ConnectionId='2' x:Name="ReturnToMenu" Content="Volver al menú" VerticalAlignment="Top" FontSize="30px" Margin="30,30,0,0" Width="230" Height="70"                           >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
                </Button.Background>
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='3' x:Name="RobotTeam" Content="Robots" VerticalAlignment="Bottom" FontSize="30px" Margin="30,0,0,30" Width="230" Height="70" Grid.Row="4"                        >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
                </Button.Background>
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='4' x:Name="Settings" Content="Ajustes" FontSize="30px" Width="200" Height="70" Grid.Column="4"                         Margin="-30,30,0,0" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="CardX1.png" AlignmentY="Top" AlignmentX="Center" />
                </Button.Background>
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                <ImageBrush x:Key="ButtonBackgroundPointerOver" ImageSource="CardX1.png"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>


            <Image x:ConnectionId='5' x:Name="Level1" Source="Assets/nivel1.png"                                                                                                            Width="225" Grid.Row="1"  Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Image x:ConnectionId='6' x:Name="Level2Blocked" Source="Assets/nivel2Block.png"                                                                                                          Width="250"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <Image x:ConnectionId='7' x:Name="Level2" Source="Assets/nivel2.png"                                                                                                          Width="250"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Collapsed"/>
            <Image x:ConnectionId='8' x:Name="Level3Blocked" Source="Assets/nivel3Block.png"                                                                                                          Width="250"  Grid.Column="3" VerticalAlignment="Top" Grid.Row="1"/>
            <Image x:ConnectionId='9' x:Name="Level3" Source="Assets/nivel3.png"                                                                                                          Width="250"  Grid.Column="3" VerticalAlignment="Top" Grid.Row="1" Visibility="Collapsed"/>
            <Image x:ConnectionId='10' x:Name="Level4Blocked" Source="Assets/nivel4Block.png"                                                                                                          Width="250"  Grid.Column="3" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            <Image x:ConnectionId='11' x:Name="Level4" Source="Assets/nivel4.png"                                                                                                          Width="250"  Grid.Column="3" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="Collapsed"/>

        </Grid>
    </Viewbox>
    
</Page>

