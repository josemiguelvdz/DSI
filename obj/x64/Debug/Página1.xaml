<Page
    x:Class="P3JoseMiguelVillacanas.Página1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:P3JoseMiguelVillacanas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="30" />
        </Style>
    </Page.Resources>

    <Viewbox>
        <Grid Width="1280" Height="720">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/background2.png" Stretch="Fill" AlignmentY="Top" AlignmentX="Center" />
            </Grid.Background>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image x:ConnectionId='33' Source="Assets/playButton.png" Width="300"                                  ></Image>
                <Image x:ConnectionId='34' Source="Assets/confButton.png" Width="300"                                    ></Image>
                <Image x:ConnectionId='35' Source="Assets/exitButton.png" Width="300"                                  ></Image>
            </StackPanel>
                

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right"  Width="330" Height="60" Spacing="30">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  >
                    <Image HorizontalAlignment="Center" Height="80"   VerticalAlignment="Center" Width="80" Source="/Assets/diamond.png"/>
                    <TextBlock x:ConnectionId='32' x:Name="DiamantesTotales" Text="0" FontWeight="Bold" Height="50" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  >
                    <Image x:ConnectionId='31' x:Name="Tienda" HorizontalAlignment="Center" Height="80"   VerticalAlignment="Center" Width="80" Source="/Assets/diamond.png"                                       />
                </StackPanel>
            </StackPanel>

            <Grid x:ConnectionId='2' x:Name="Ofertas" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1100" Height="500" Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/fondoTienda.png" AlignmentY="Top" AlignmentX="Center" />
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*" ></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60px"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40px"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="100" Margin="0,-45,0,0" Grid.Column="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image x:ConnectionId='28' x:Name="OfertasDiamantes" Source="Assets/playButton.png" Width="300"                                      ></Image>
                        <Image x:ConnectionId='29' x:Name="OfertasPalas" Source="Assets/confButton.png" Width="300"                                      ></Image>
                        <Image x:ConnectionId='30' x:Name="OfertasRobots" Source="Assets/exitButton.png" Width="300"                                      ></Image>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Margin="0,-45,0,0">
                    <Image x:ConnectionId='27' x:Name="SalirTienda" Source="Assets/Icons/03.png" Width="50" Height="50"                                      ></Image>
                </StackPanel>

                <Grid x:ConnectionId='3' x:Name="OfertasDiamante" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">

                    <ScrollViewer Height="400" Width="900" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
                        <StackPanel Height="400" Width="1450" Orientation="Horizontal" Spacing="10">
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='26' x:Name="oferta1" Width="170" Content="0,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0"                      BorderBrush="#FF1A85D0" >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='25' x:Name="oferta2" Width="170" Content="4,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='24' x:Name="oferta3" Width="170" Content="9,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='23' x:Name="oferta4" Width="170" Content="14,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='22' x:Name="oferta5" Width="170" Content="19,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='21' x:Name="oferta6" Width="170" Content="49,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='20' x:Name="oferta7" Width="170" Content="99,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="#FF52E7F0" BorderBrush="#FF1A85D0"                     >
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>

                <Grid x:ConnectionId='4' x:Name="OfertasPala" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Visibility="Collapsed" Grid.Column="1">

                    <ScrollViewer Height="400" Width="900" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
                        <StackPanel Height="400" Width="1450" Orientation="Horizontal" Spacing="10">
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='19' x:Name="ofertaPala1" Width="170" Content="0,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red"                      BorderBrush="DarkRed" >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='18' x:Name="ofertaPala2" Width="170" Content="4,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='17' x:Name="ofertaPala3" Width="170" Content="9,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='16' x:Name="ofertaPala4" Width="170" Content="14,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='15' x:Name="ofertaPala5" Width="170" Content="19,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='14' x:Name="ofertaPala6" Width="170" Content="49,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='13' x:Name="ofertaPala7" Width="170" Content="99,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Red" BorderBrush="DarkRed"                     >
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>

                <Grid x:ConnectionId='5' x:Name="OfertasRobot" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Visibility="Collapsed" Grid.Column="1">

                    <ScrollViewer Height="400" Width="900" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
                        <StackPanel Height="400" Width="1450" Orientation="Horizontal" Spacing="10">
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='12' x:Name="ofertaRobot1" Width="170" Content="0,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow"                      BorderBrush="LightGoldenrodYellow" >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='11' x:Name="ofertaRobot2" Width="170" Content="4,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='10' x:Name="ofertaRobot3" Width="170" Content="9,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='9' x:Name="ofertaRobot4" Width="170" Content="14,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='8' x:Name="ofertaRobot5" Width="170" Content="19,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='7' x:Name="ofertaRobot6" Width="170" Content="49,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                            <Grid Height="350" Width="200">
                                <Image Source="Assets/gemas.png" HorizontalAlignment="Center" Width="200" Height="350"></Image>
                                <Button x:ConnectionId='6' x:Name="ofertaRobot7" Width="170" Content="99,99$" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,58" Background="Yellow" BorderBrush="LightGoldenrodYellow"                     >
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>

            </Grid>
        </Grid>

    </Viewbox>

</Page>

