<Page
    x:Class="P3JoseMiguelVillacanas.Página1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:P3JoseMiguelVillacanas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="30" />
        </Style>
    </Page.Resources>


    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="430">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="30" Width="100">
                    <Image x:Name="play" Source="Assets/Play.png" Width="80" Height="80" />
                    <Image x:Name="ajustes" Source="Assets/Ajustes.png" Width="70" Height="70" />
                    <Image x:Name="menu" Source="Assets/Menu.png" Width="80" Height="80" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="330" Spacing="30">
                <Button x:Name="PlayButton" Content="Jugar" HorizontalAlignment="Center" Width="330" Click="PlayButton_Click" FontSize="45"/>
                <Button x:Name="ConfigButton" Content="Configuración" HorizontalAlignment="Center"  Width="330" Click="ConfigButton_Click" FontSize="45"/>
                <Button x:Name="ExitButton" Content="Salir" HorizontalAlignment="Center"  Width="330" FontSize="45"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
